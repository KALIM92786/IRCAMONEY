# Environment Variables Template
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ircamoney

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRES_IN=7d

# RoboForex API Configuration
ROBOFOREX_API_URL=https://api.stockstrader.com
ROBOFOREX_ACCOUNT_ID=your_account_id_here
ROBOFOREX_API_TOKEN=your_api_token_here

# Sync Engine Configuration
SYNC_INTERVAL=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id